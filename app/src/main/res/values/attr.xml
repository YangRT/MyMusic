<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GifView">
        <attr name="res_id" format="reference"/>
    </declare-styleable>
    <declare-styleable name="SearchView">
        <attr name="textSizeSearch" format="dimension"  />
        <attr name="textColorSearch" format="color" />
        <attr name="textHintSearch" format="string" />
        <attr name="searchBlockHeight" format="dimension" />
        <attr name="searchBlockColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PlayingProcessBar">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="processBarColor" format="color" />
        <attr name="processBarWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LyricsView">
        <attr name="lrcMode" format="enum">
            <enum name="KARAOKE" value="1"/>
        </attr>
        <attr name="hignLineColor" format="color|reference"/>
        <attr name="lrcColor" format="color|reference"/>
    </declare-styleable>
</resources>