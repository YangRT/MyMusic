<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DAFFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bottom_bar_image"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.circle"
        android:padding="6dp"
        android:src="@drawable/test"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/bottom_bar_name"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:maxWidth="160dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_toEndOf="@id/bottom_bar_image"
        android:text="一起走过的日子一起走过的日子一起走过的日子"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/bottom_bar_author"
        android:layout_marginStart="20dp"
        android:maxWidth="160dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@id/bottom_bar_image"
        android:layout_below="@id/bottom_bar_name"
        android:text="刘德华"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/bottom_bar_btn"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/bottom_bar_menu"
        android:src="@drawable/play_music"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <ImageView
        android:id="@+id/bottom_bar_menu"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/menu"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
</RelativeLayout>